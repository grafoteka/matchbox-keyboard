        </key>
        <key obey-caps="true">
            <default display="k" />
            <shifted display="K" />
        </key>
        <key obey-caps="true">
            <default display="l" />
            <shifted display="L" />
        </key>
        <key obey-caps="true">
            <default display="ò" />
            <shifted display="ç" />
        </key>
        <key obey-caps="true">
            <default display="à" />
            <shifted display="ù" />
        </key>
        <key width="1500">
            <default display="⏎" action="return"/>
        </key>
    </row>

    <row>
         <key width="1500">
            <default display="⇧" action="modifier:shift" />
            <caps    display="⬆" action="modifier:shift" />
        </key>
        <key>
            <default display="⇪" action="modifier:mod2"/>
        </key>
        <key obey-caps="true">
            <default display="z" />
            <shifted display="Z" />
        </key>
        <key obey-caps="true">
            <default display="x" />
            <shifted display="X" />
