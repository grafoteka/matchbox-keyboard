            <mod2    display="¨" action="xkeysym:dead_diaeresis"/>
        </key>
        <key obey-caps="true">
            <default display="e" />
            <shifted display="E" />
            <mod2    display="ˋ" action="xkeysym:dead_grave"/>
        </key>
        <key obey-caps="true">
            <default display="r" />
            <shifted display="R" />
            <mod2    display="ˆ" action="xkeysym:dead_circumflex"/>
        </key>
        <key obey-caps="true">
            <default display="t" />
