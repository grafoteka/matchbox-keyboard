            <shifted display="I" />
        </key>
        <key obey-caps="true">
            <default display="o" />
            <shifted display="O" />
        </key>
        <key obey-caps="true">
            <default display="p" />
            <shifted display="P" />
        </key>
	<key width="1500">
            <default display="⇦" action="backspace" />
        </key>
    </row>

    <row>
        <key obey-caps="true">
            <default display="a" />
